@model ISO810_ComprasProject.Models.Articulos

@{
    ViewData["Title"] = "Edit";
}

<div class="content-body">
    <div class="page-titles">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-action="Index">
                    <i class="fas fa-balance-scale"></i>
                    Articulos
                </a>
            </li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Editar</a></li>
        </ol>
    </div>
    <div class="container-fluid">
        <div class="d-flex justify-content-end align-items-center mb-4">
            <div class="d-flex align-items-center">
                <a asp-action="Index" class="btn btn-info btn-sm ms-2"> <i class="fa fa-arrow-left"></i> Volver</a>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="UnidadMedidaId" />
                            <div class="row">
                                <div class="col-md-6">
                                    <input type="hidden" asp-for="ArticuloId" />
                                    <div class="form-group">
                                        <label asp-for="Descripcion" class="control-label"></label>
                                        <input asp-for="Descripcion" class="form-control" />
                                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Marca" class="control-label"></label>
                                        <input asp-for="Marca" class="form-control" />
                                        <span asp-validation-for="Marca" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="UnidadMedidaId" class="control-label"></label>
                                        <select asp-for="UnidadMedidaId" class="form-control" asp-items="ViewBag.UnidadMedidaId"></select>
                                        <span asp-validation-for="UnidadMedidaId" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="CostoUnitario" class="control-label"></label>
                                        <input asp-for="CostoUnitario" class="form-control" />
                                        <span asp-validation-for="CostoUnitario" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Stock" class="control-label"></label>
                                        <input asp-for="Stock" class="form-control" />
                                        <span asp-validation-for="Stock" class="text-danger"></span>
                                    </div>
                                    <div class="form-group form-check mt-3">
                                        <input type="checkbox" class="form-check-input me-2" asp-for="Activo" id="activoCheckbox" />
                                        <label class="form-check-label" for="activoCheckbox">
                                            Estatus: <span id="estadoTexto">@(Model.Activo ? "Activo" : "Inactivo")</span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="d-flex justify-content-end">
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const checkbox = document.getElementById("activoCheckbox");
        const estadoTexto = document.getElementById("estadoTexto");

        checkbox.addEventListener("change", function () {
            estadoTexto.textContent = checkbox.checked ? "Activo" : "Inactivo";
        });
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


