@model IEnumerable<ISO810_ComprasProject.Models.Articulos>

@{
    ViewData["Title"] = "Index";
}

<div class="content-body">
    <div class="page-titles">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="javascript:void(0)">
                    <i class="fas fa-balance-scale"></i>
                    Articulos
                </a>
            </li>
        </ol>
    </div>
    <div class="container-fluid">
        <div class="d-flex justify-content-end align-items-center mb-4">
            <div class="d-flex align-items-center">
                <a asp-action="Create" class="btn btn-primary btn-sm ms-2">+ Nuevo</a>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Descripcion)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Marca)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.UnidadMedida)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CostoUnitario)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Stock)
                                    </th>
                                    <th>
                                        Estatus
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Descripcion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Marca)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UnidadMedida.Descripcion)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.CostoUnitario)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Stock)
                                        </td>
                                        <td>
                                            @if (item.Activo)
                                            {
                                                <span class="">Activo</span>
                                            }
                                            else
                                            {
                                                <span class="">Inactivo</span>
                                            }
                                        </td>
                                        <td class="text-end">
                                            <div class="btn-group" role="group">
                                                <a asp-action="Edit" asp-route-id="@item.ArticuloId" class="btn btn-sm btn-warning me-2">Editar</a>
                                                <a asp-action="Details" asp-route-id="@item.ArticuloId" class="btn btn-sm btn-info me-2">Detalles</a>
                                                <a asp-action="Delete" asp-route-id="@item.ArticuloId" class="btn btn-sm btn-danger">Eliminar</a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

