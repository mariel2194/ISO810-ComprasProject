@model ISO810_ComprasProject.Models.Articulos

@{
    ViewData["Title"] = "Details";
}

<div class="content-body">
    <div class="page-titles">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a asp-action="Index">
                    <i class="fas fa-box"></i>
                    Articulos
                </a>
            </li>
            <li class="breadcrumb-item active"><a href="javascript:void(0)">Detalles</a></li>
        </ol>
    </div>
    <div class="container-fluid">
        <div class="d-flex justify-content-end align-items-center mb-4">
            <div class="d-flex align-items-center">
                <a asp-action="Index" class="btn btn-info btn-sm ms-2"> <i class="fa fa-arrow-left"></i> Volver</a>
            </div>
        </div>
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Descripcion)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Descripcion)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Marca)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Marca)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.UnidadMedida)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.UnidadMedida.Descripcion)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.CostoUnitario)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.CostoUnitario)
                            </dd>
                            <dt class="col-sm-2">
                                @Html.DisplayNameFor(model => model.Stock)
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Stock)
                            </dd>
                            <dt class="col-sm-2">
                                Estatus
                            </dt>
                            <dd class="col-sm-10">
                                @if (Model.Activo)
                                {
                                    <span class="">Activo</span>
                                }
                                else
                                {
                                    <span class="">Inactivo</span>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

